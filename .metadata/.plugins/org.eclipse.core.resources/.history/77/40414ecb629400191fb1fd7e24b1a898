public class AlertPageSteps {

	@When("I clicked JavaScript Alerts")
	public void i_clicked_JavaScript_Alerts() {
	  System.getProperty("webdriver.chrome.driver", "src/test/resources/drivers/chromedriver");
	  WebDriver driver=new ChromeDriver();
	  driver.manage().timeouts().pageLoadTimeout(30, TimeUnit.SECONDS);
		driver.manage().timeouts().implicitlyWait(20, TimeUnit.SECONDS);
		driver.manage().window().fullscreen();
		driver.get(ConfigsReader.getProperty(Constants.HEROKUAPP_FILEPATH));
	  
		//BaseClass.setUp();
	}

